---
import LangDrawer from "./LangDrawer.astro";
import MenuDrawer from "./MenuDrawer.astro";
---
<header style="position: fixed; top: 26px; left: 0; right: 0; z-index: 50; display: flex; align-items: center; justify-content: space-between; padding: 0 1rem; direction: ltr;">
  {/* Language button - LEFT side */}
  <button id="btn-lang" style="display: flex; align-items: center; justify-content: center; transition: opacity 0.2s; background: none; border: none; cursor: pointer;"
    aria-controls="lang-drawer" aria-expanded="false" aria-label="languages">
    <img src="/UI/lang_icon.svg" alt="language" style="width: 30px; height: 30px;" />
  </button>

  {/* Menu button - RIGHT side */}
  <button id="btn-menu" style="display: flex; align-items: center; justify-content: center; transition: opacity 0.2s; background: none; border: none; cursor: pointer;"
    aria-controls="menu-drawer" aria-expanded="false" aria-label="menu">
    <img src="/UI/menu_icon.svg" alt="menu" style="width: 30px; height: 30px;" />
  </button>

  <LangDrawer id="lang-drawer" />
  <MenuDrawer id="menu-drawer" />
</header>
