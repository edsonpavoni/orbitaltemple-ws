---
import BaseLayout from "../layouts/BaseLayout.astro";
import CountdownTimer from "../components/CountdownTimer";
---

<BaseLayout title="Orbital Temple - Launching November 28, 2025">

  <!-- Full Screen Countdown Section -->
  <section style="position: relative; min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: space-between; padding: 1.5rem;">

    <!-- Satellite Background Video -->
    <div style="position: absolute; inset: 0; z-index: 0;">
      <!-- Mobile Video -->
      <video
        autoplay
        loop
        muted
        playsinline
        poster="/videos/mobile_placeholder.webp"
        style="width: 100%; height: 100%; object-fit: cover; opacity: 0.6; display: block;"
        class="mobile-video">
        <source src="/videos/mobile.webm" type="video/webm" />
        <source src="/videos/mobile_h264.mp4" type="video/mp4" />
      </video>

      <!-- Desktop Video -->
      <video
        autoplay
        loop
        muted
        playsinline
        poster="/videos/desk_placeholder.webp"
        style="width: 100%; height: 100%; object-fit: cover; opacity: 0.6; display: none;"
        class="desktop-video">
        <source src="/videos/desk_h264.webm" type="video/webm" />
        <source src="/videos/desk_h264.mp4" type="video/mp4" />
      </video>
    </div>

    <!-- Top spacer -->
    <div style="flex: 1;"></div>

    <!-- Content (centered) -->
    <div style="position: relative; z-index: 1; text-align: center; max-width: 800px;">

      <!-- Countdown Timer -->
      <div style="margin-bottom: 3rem;">
        <CountdownTimer client:only="react" />
      </div>

      <!-- Launch Text -->
      <p style="font-size: 16px; line-height: 1.6; color: #ffffff; opacity: 0.9; max-width: 600px; margin: 0 auto;">
        to launch of the Orbital Temple, an artwork and a satellite, aiming to be a radical inclusive temple, in a place where no wall can reach.
      </p>

    </div>

    <!-- Bottom section with notify link -->
    <div style="position: relative; z-index: 1; width: 100%; display: flex; justify-content: center; padding-bottom: 2rem;">
      <a href="/notify-me" style="color: #ffffff; opacity: 0.6; font-size: 14px; text-decoration: none; transition: opacity 0.2s;" class="notify-link">
        Notify me at launch
      </a>
    </div>

  </section>

  <!-- Styles -->
  <style>
    /* Hide header on countdown page */
    header {
      display: none !important;
    }

    @media (min-width: 768px) {
      .mobile-video {
        display: none !important;
      }
      .desktop-video {
        display: block !important;
      }
    }

    /* Notify link hover effect */
    .notify-link:hover {
      opacity: 1 !important;
    }
  </style>

</BaseLayout>
