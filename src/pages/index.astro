---
import CountdownLayout from "../layouts/CountdownLayout.astro";
import CountdownTimer from "../components/CountdownTimer";
---

<CountdownLayout title="Orbital Temple - Launching November 28, 2025">

  <!-- Full Screen Countdown Section -->
  <section style="position: relative; min-height: 100vh; display: flex; flex-direction: column; align-items: center; justify-content: center; padding: 1.5rem;">

    <!-- Satellite Background Video -->
    <div style="position: absolute; inset: 0; z-index: 0;">
      <!-- Mobile Video -->
      <video
        autoplay
        loop
        muted
        playsinline
        poster="/videos/mobile_placeholder.webp"
        style="width: 100%; height: 100%; object-fit: cover; opacity: 0.6; display: block;"
        class="mobile-video">
        <source src="/videos/mobile.webm" type="video/webm" />
        <source src="/videos/mobile_h264.mp4" type="video/mp4" />
      </video>

      <!-- Desktop Video -->
      <video
        autoplay
        loop
        muted
        playsinline
        poster="/videos/desk_placeholder.webp"
        style="width: 100%; height: 100%; object-fit: cover; opacity: 0.6; display: none;"
        class="desktop-video">
        <source src="/videos/desk_h264.webm" type="video/webm" />
        <source src="/videos/desk_h264.mp4" type="video/mp4" />
      </video>
    </div>

    <!-- Content -->
    <div style="position: relative; z-index: 1; text-align: center; max-width: 800px;">

      <!-- Countdown Timer -->
      <div style="margin-bottom: 3rem;">
        <CountdownTimer client:only="react" />
      </div>

      <!-- Launch Text -->
      <p style="font-size: 16px; line-height: 1.6; color: #ffffff; opacity: 0.9; max-width: 600px; margin: 0 auto 2rem auto;">
        to launch of the Orbital Temple, an artwork and a satellite, aiming to be a radical inclusive temple, in a place where no wall can reach.
      </p>

      <!-- Notify Link -->
      <a href="/notify-me" style="display: inline-block; padding: 0.75rem 2rem; border: 2px solid var(--color-ot-gold200); color: #ffffff; font-weight: 600; font-size: 16px; text-decoration: none; border-radius: 4px; transition: all 0.2s; margin-top: 1rem;">
        Notify me at launch
      </a>

    </div>

  </section>

  <!-- Media Query for Desktop Video -->
  <style>
    @media (min-width: 768px) {
      .mobile-video {
        display: none !important;
      }
      .desktop-video {
        display: block !important;
      }
    }

    /* Button hover effect */
    a[href="/notify-me"]:hover {
      background: rgba(250, 212, 58, 0.1);
      border-color: var(--color-ot-gold100);
      transform: translateY(-2px);
    }
  </style>

</CountdownLayout>
