---
import Base from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import DonateContent from "../components/DonateContent";

// Get URL parameters
const url = new URL(Astro.request.url);
const donationType = url.searchParams.get("type") || "General Support";
const amount = url.searchParams.get("amount") || "0";
---
<Base title="Donate to Orbital Temple">

  <main class="artwork-page">
    <DonateContent client:only="react" donationType={donationType} amount={amount} />

    <!-- Footer -->
    <footer class="artwork-footer">
      <Footer />
    </footer>

  </main>

</Base>

<style is:global>
  /* Hover effects for buttons */
  a[style*="background: var(--color-ot-gold200)"]:hover {
    background: var(--color-ot-gold100) !important;
    transform: translateY(-2px);
  }

  a[style*="border: 2px solid"]:hover {
    background: rgba(250, 212, 58, 0.1) !important;
    border-color: var(--color-ot-gold100) !important;
  }
</style>
