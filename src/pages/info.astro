---
import Base from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
---
<Base title="Technical Info - Orbital Temple">

  <main class="artwork-page">

    <!-- Main Title -->
    <h1 class="artwork-title">
      Technical Info
    </h1>

    <!-- Satellite Section -->
    <h2 class="section-heading">
      Satellite
    </h2>

    <p class="body-text">
      Dimensions: 50x58x64 mm<br />
      1P PocketQube<br />
      Weight: 245 gr<br />
      Materials: aluminum, gold, fiberglass, and electronic components.<br />
      Orbit: Altitude 525 ± 25 km; inclination: SSO 97.6 ± 0.1°
    </p>

    <!-- Image -->
    <figure class="artwork-image">
      <img src="/howItWorks/info.webp" alt="Technical Info Diagram" />
    </figure>

    <!-- Antenna/Sculpture Section -->
    <h2 class="section-heading">
      Antenna/Sculpture
    </h2>

    <p class="body-text">
      Dimensions: 6 m (diameter) e 1.2m (height)<br />
      Weight: 46 kg<br />
      Materials: aluminum, epoxy mirrored board, golden aluminum dome suspended through a scaffolding structure.
    </p>

    <!-- Radio Specs -->
    <h2 class="section-heading">
      Radio Specs NASA-Catalog:
    </h2>

    <p class="body-text body-text--section-end">
      TBD Downlink: 437 MHz<br />
      Call: Status: SCHEDULE FOR 2025
    </p>

    <!-- Footer -->
    <footer class="artwork-footer">
      <Footer />
    </footer>

  </main>

</Base>
