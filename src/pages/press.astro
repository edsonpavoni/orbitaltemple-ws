---
import Base from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import PressContent from "../components/PressContent";
---
<Base title="Press & Media - Orbital Temple">

  <main class="artwork-page">
    <PressContent client:only="react" />

    <!-- Footer -->
    <footer class="artwork-footer">
      <Footer />
    </footer>

  </main>

  <style is:global>
    .press-section {
      margin-bottom: 3rem;
    }

    .press-section h2.section-heading {
      margin-top: 4.5rem;
      margin-bottom: 2rem;
    }

    .press-section h2.section-heading:first-of-type {
      margin-top: 0;
    }

    .press-section h3 {
      color: var(--color-ot-gold100);
      margin-top: 2rem;
      margin-bottom: 1rem;
    }

    .press-release-summary {
      background: rgba(250, 212, 58, 0.05);
      padding: 2rem;
      border-left: 4px solid var(--color-ot-gold200);
      margin-bottom: 3rem;
    }

    .artist-photos-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 1.5rem;
    }

    .artist-photo-item {
      text-align: right;
    }

    .artist-photo-item a {
      text-decoration: none;
      color: var(--color-ot-gold100);
      transition: color 0.2s ease;
      display: block;
    }

    .artist-photo-item a:hover {
      color: var(--color-ot-gold200);
    }

    .artist-photo-item img {
      width: 100%;
      height: auto;
      display: block;
    }

    .press-images-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      margin-top: 1.5rem;
    }

    .press-image-item {
      text-align: right;
    }

    .press-image-item a {
      text-decoration: none;
      color: var(--color-ot-gold100);
      transition: color 0.2s ease;
      display: block;
    }

    .press-image-item a:hover {
      color: var(--color-ot-gold200);
    }

    .press-image-item img {
      display: block;
      width: 100%;
    }

    .milestone-images-container {
      display: flex;
      gap: 2rem;
      justify-content: flex-start;
      align-items: center;
      flex-wrap: wrap;
    }

    .milestone-image {
      margin: 0;
      max-width: 200px;
    }

    .milestone-image-small {
      max-width: 140px;
    }

    .milestone-image img {
      width: 100%;
      height: auto;
    }

    /* Additional Resources styling */
    .additional-resources-links a {
      color: var(--color-ot-gold200);
      text-decoration: none;
      transition: text-decoration 0.2s ease;
    }

    .additional-resources-links a:hover {
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .press-images-grid {
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }

      .artist-photos-grid {
        grid-template-columns: 1fr;
      }

      .press-release-summary {
        padding: 1.5rem;
      }
    }
  </style>

</Base>
