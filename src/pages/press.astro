    </section>

    <!-- About the Artist -->
    <section class="press-section">
      <h2 class="section-heading">
        About the Artist
      </h2>

      <div class="artist-photos-grid">
        <div class="artist-photo-item">
          <a href="/press/edson-pavoni-1.jpg" download="edson-pavoni-portrait-1.jpg">
            <img src="/press/edson-pavoni-1.webp" alt="Edson Pavoni Portrait 1" />
            <p class="caption-text" style="text-align: center;">Photo 1<br />↓ Download High-Res</p>
