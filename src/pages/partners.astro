---
import Base from "../layouts/BaseLayout.astro";
import Footer from "../components/Footer.astro";
import PartnersContent from "../components/PartnersContent";
---
<Base title="Partners - Orbital Temple">

  <main class="artwork-page">
    <PartnersContent client:only="react" />

    <!-- Footer -->
    <footer class="artwork-footer">
      <Footer />
    </footer>

  </main>

</Base>

<style is:global>
  .partners-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media (min-width: 640px) {
    .partners-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
  }

  @media (min-width: 968px) {
    .partners-grid {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 2.5rem;
    }
  }

  .partner-card {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    background: transparent;
    border: none;
    border-radius: 0;
    transition: all 0.3s ease;
  }

  .partner-card:hover {
    background: transparent;
  }

  .partner-logo-container {
    width: 100%;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    background: #000000;
    border-radius: 0;
    padding: 1.5rem;
  }

  .partner-logo-container a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
  }

  .partner-logo {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    filter: brightness(0) invert(1);
  }

  .partner-logo-no-filter {
    filter: none;
  }

  .partner-logo-small {
    max-width: 55%;
    max-height: 55%;
  }

  .partner-name {
    font-size: var(--text-body-lg);
    font-weight: 700;
    color: var(--color-ot-gold100);
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .partner-name a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .partner-name a:hover {
    color: var(--color-ot-gold200);
  }

  .partner-description {
    font-size: var(--text-body-std);
    line-height: var(--text-body-std-lh);
    color: var(--color-ot-gold100);
    margin: 0;
    opacity: 0.9;
  }

  /* Handle missing logos gracefully */
  .partner-logo-container img[src*=".svg"] {
    filter: none;
  }

  /* Fallback for broken images */
  .partner-logo-container img {
    background: transparent;
  }
</style>
