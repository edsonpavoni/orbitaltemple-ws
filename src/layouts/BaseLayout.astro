---
const { title = "Orbital Temple" } = Astro.props;
import "../styles/global.css";
import Header from "../components/Header.astro";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, viewport-fit=cover" />
    <title>{title}</title>
  </head>
  <body style="margin: 0; padding: 0; min-height: 100vh; background-color: var(--color-ot-dark);">
    <Header />
    <slot />
    <script>
      // Initialize i18n before components load
      import('../lib/i18n');
    </script>
    <script src="../scripts/drawer.js"></script>
  </body>
</html>